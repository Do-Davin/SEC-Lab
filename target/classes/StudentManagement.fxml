<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanager.controller.StudentController">
   <top>
      <VBox spacing="10.0" styleClass="header-section">
         <children>
            <!-- Title and Main Actions -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Label styleClass="title-label" text="Student Management System" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addButton" onAction="#handleAddStudent" styleClass="primary-button" text="Add New Student" />
                  <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="secondary-button" text="Refresh" />
                  <Button fx:id="exportButton" onAction="#handleExport" styleClass="secondary-button" text="Export" />
               </children>
            </HBox>
            
            <!-- Statistics Section -->
            <HBox spacing="15.0" styleClass="stats-section">
               <children>
                  <VBox alignment="CENTER" spacing="5.0" styleClass="stat-card">
                     <children>
                        <Label fx:id="totalStudentsLabel" styleClass="stat-number" text="0" />
                        <Label styleClass="stat-label" text="Total Students" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="5.0" styleClass="stat-card">
                     <children>
                        <Label fx:id="averageGpaLabel" styleClass="stat-number" text="0.00" />
                        <Label styleClass="stat-label" text="Average GPA" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="5.0" styleClass="stat-card">
                     <children>
                        <Label fx:id="honorStudentsLabel" styleClass="stat-number" text="0" />
                        <Label styleClass="stat-label" text="Honor Students" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="5.0" styleClass="stat-card">
                     <children>
                        <Label fx:id="honorPercentageLabel" styleClass="stat-number" text="0%" />
                        <Label styleClass="stat-label" text="Honor Rate" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Search and Filter Section -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Search:" />
                  <TextField fx:id="searchField" onKeyReleased="#handleSearch" prefWidth="250.0" promptText="Search by name, email, or major..." />
                  <Button fx:id="clearSearchButton" onAction="#handleClearSearch" styleClass="secondary-button" text="Clear" />
                  <Separator orientation="VERTICAL" />
                  <Label text="Filter by Major:" />
                  <ComboBox fx:id="majorFilterComboBox" onAction="#handleMajorFilter" prefWidth="150.0" promptText="All Majors" />
                  <Button fx:id="showHonorButton" onAction="#handleShowHonorStudents" styleClass="secondary-button" text="Honor Students" />
                  <Label text="Domain Name" />
                  <ComboBox fx:id="majorFilterComboBox1" onAction="#handleMajorFilter" prefWidth="150.0" promptText="All Students" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   
   <center>
      <VBox spacing="10.0">
         <children>
            <!-- Student Table -->
            <TableView fx:id="studentTable" styleClass="student-table">
               <columns>
                  <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                  <TableColumn fx:id="firstNameColumn" prefWidth="120.0" text="First Name" />
                  <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Last Name" />
                  <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                  <TableColumn fx:id="ageColumn" prefWidth="60.0" text="Age" />
                  <TableColumn fx:id="gpaColumn" prefWidth="80.0" text="GPA" />
                  <TableColumn fx:id="majorColumn" prefWidth="150.0" text="Major" />
                  <TableColumn fx:id="phoneColumn" prefWidth="120.0" text="Phone" />
                  <TableColumn fx:id="enrollmentDateColumn" prefWidth="120.0" text="Enrollment" />
                  <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Academic Status" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <!-- Table Action Buttons -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="editButton" disable="true" onAction="#handleEditStudent" styleClass="primary-button" text="Edit Selected" />
                  <Button fx:id="deleteButton" disable="true" onAction="#handleDeleteStudent" styleClass="danger-button" text="Delete Selected" />
                  <Button fx:id="viewDetailsButton" disable="true" onAction="#handleViewDetails" styleClass="secondary-button" text="View Details" />
                  <Separator orientation="VERTICAL" />
                  <Label text="Selected:" />
                  <Label fx:id="selectedStudentLabel" styleClass="info-label" text="None" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
         </padding>
      </VBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="status-bar">
         <children>
            <Label fx:id="statusLabel" styleClass="status-label" text="Ready" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lastUpdatedLabel" styleClass="timestamp-label" text="Last updated: Never" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
